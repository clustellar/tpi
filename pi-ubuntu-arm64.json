{
	"variables": {
		"datacenter": "dc1",
		"consul_key": ""
	},
	"builders": [
		{
			"type": "arm",
			"file_urls" : ["http://cdimage.ubuntu.com/releases/20.04.1/release/ubuntu-20.04.1-preinstalled-server-arm64+raspi.img.xz"],
			"file_checksum_url": "http://cdimage.ubuntu.com/releases/20.04.1/release/SHA256SUMS",
			"file_checksum_type": "sha256",
			"file_target_extension": "xz",
			"file_unarchive_cmd": ["xz", "-d", "$ARCHIVE_PATH"],
			"image_build_method": "resize",
			"image_path": "ubuntu-20.04.img",
			"image_size": "6G",
			"image_type": "dos",
			"image_partitions": [
				{
					"name": "boot",
					"type": "c",
					"start_sector": "8192",
					"filesystem": "vfat",
					"size": "256M",
					"mountpoint": "/boot"
				},
				{
					"name": "root",
					"type": "83",
					"start_sector": "532480",
					"filesystem": "ext4",
					"size": "0",
					"mountpoint": "/"
				}
    	],
			"image_chroot_env": ["PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"],
			"qemu_binary_source_path": "/usr/bin/qemu-aarch64-static",
			"qemu_binary_destination_path": "/usr/bin/qemu-aarch64-static"
		}
	],
	"provisioners": [
		{
			 "type": "shell",
			 "inline": [
				 "touch /boot/ssh",
				 "rm -f /etc/resolv.conf",
         "echo 'nameserver 8.8.8.8' > /etc/resolv.conf",
         "echo \"127.0.1.1 $HOSTNAME ubuntu\" >> /etc/hosts",
         "echo 'debconf debconf/frontend select Noninteractive' | sudo debconf-set-selections",
				 "export APT_KEY_DONT_WARN_ON_DANGEROUS_USAGE=1",
				 "curl -sSL https://get.docker.com | sh"
		 ]
		},
		{
			"type": "shell",
			"inline": [
				"sudo useradd -s /bin/bash -d /home/ubuntu -m -G docker ubuntu",
        "sudo chage -I -1 -m 0 -M 99999 -l ubuntu",
        "sudo -H -u ubuntu bash -c 'mkdir -p ~/.ssh ~/.vault'",
        "sudo -H -u ubuntu bash -c 'touch ~/.ssh/authorized_keys ~/.bash_profile'"
			]
		},
		{
			"type": "file",
			"source": "./id_rsa.pub",
			"destination": "/home/ubuntu/.ssh/authorized_keys"
		},
		{
			"type": "file",
			"source": "./bin/k3s",
			"destination": "/usr/local/bin/"
		},
		{
			"type": "file",
			"source": "./bin/vault",
			"destination": "/usr/local/bin/"
		},
		{
			"type": "file",
			"source": "./bin/consul",
			"destination": "/usr/local/bin/"
		},
		{
			"type": "file",
			"source": "./bin/consul-template",
			"destination": "/usr/local/bin/"
		},
		{
			"type": "file",
			"source": "./bin/nomad",
			"destination": "/usr/local/bin/"
		},
		{
			"type": "shell",
			"inline": [
				"sudo mkdir -p /var/lib/teleport"
			]
		},
		{
			"type": "file",
			"source": "./bin/teleport",
			"destination": "/usr/local/bin/"
		},
		{
			"type": "file",
			"source": "./bin/tctl",
			"destination": "/usr/local/bin/"
		},
		{
			"type": "file",
			"source": "./bin/tbot",
			"destination": "/usr/local/bin/"
		},
		{
			"type": "file",
			"source": "./bin/tsh",
			"destination": "/usr/local/bin/"
		},
		{
			"type": "shell",
			"inline": [
        "sudo chmod +x /usr/local/bin/*"
			]
		}
	]
}

